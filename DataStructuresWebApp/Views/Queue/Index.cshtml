@using DataStructuresWebApp.Models
@model DataStructuresWebApp.ViewModels.MainMenu

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible" />
    <meta content="width=device-width, initial-scale=1, maximum-scale=2, user-scalable=no" name="viewport" />
    <meta content="Semantic-UI-Forest, collection of design, themes and templates for Semantic-UI." name="description" />
    <meta content="Semantic-UI, Theme, Design, Template" name="keywords" />
    <meta content="PPType" name="author" />
    <meta content="#ffffff" name="theme-color" />
    <title>Data Structures</title>
    <link href="../../Content/semantic.min.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/default.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/pandoc-code-highlight.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/se/dt-1.10.18/datatables.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.semanticui.min.css" />
    <script src="../../Scripts/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/se/dt-1.10.18/datatables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/dataTables.semanticui.min.js"></script>
</head>
<body>
    <div class="ui grid container">
        <div class="computer only row">
            <div class="ui borderless huge fluid menu">
                <div class="header item">Data Structures</div>
                @foreach (Navigation item in Model.navigations)
                {
                    if (item.Name == "Queue")
                    {
                        <a class="active item" href="@Url.Action(item.ActionMethod, item.Controller)">@item.Name</a>
                    }
                    else
                    {
                        <a class="item" href="@Url.Action(item.ActionMethod, item.Controller)">@item.Name</a>
                    }
                }
                <div class="ui dropdown item">
                    Queue Actions<i class="dropdown icon"></i>
                    <div class="menu">
                        @foreach (Navigation item in Model.actionMethods)
                        {
                            <a class="item" href="@Url.Action(item.ActionMethod, item.Controller)">
                                @item.Name
                            </a>
                        }
                    </div>
                </div>
                <a class="right menu item" href="@Url.Action(Model.exit.ActionMethod, Model.exit.Controller)">@Model.exit.Name</a>
            </div>
        </div>
        <div class="tablet mobile only row">
            <div class="ui borderless huge fluid menu">
                <a class="header item"> Project Name</a>
                <div class="right menu">
                    <a class="menu item">
                        <div class="ui basic icon toggle button">
                            <i class="content icon"></i>
                        </div>
                    </a>
                </div>
            </div>
            <div class="ui vertical accordion borderless fluid menu">
                <a class="active item"> Home</a><a class="item"> About</a><a class="item"> Contact</a>
                <div class="item">
                    <div class="title">
                        Dropdown<i class="dropdown icon"></i>
                    </div>
                    <div class="content">
                        <div class="item">
                            Action
                        </div>
                        <div class="item">
                            Another action
                        </div>
                        <div class="item">
                            Something else here
                        </div>
                        <div class="ui divider"></div>
                        <div class="header item">
                            Navbar header
                        </div>
                        <div class="item">
                            Seperated link
                        </div>
                        <div class="item">
                            One more seperated link
                        </div>
                    </div>
                </div>
                <div class="ui divider"></div>
            </div>
        </div>
        @if (Model.message != null)
        {
            <div class="sixteen wide column ui negative message">
                <div class="header">
                    There are no more items to delete!
                </div>
            </div>
        }
        <table id="queueTable" class="ui celled table">
            <thead>
                <tr>
                    <th>Entry #</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Location</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Person item in Model.queuePersons)
                {
                    <tr>
                        <td>@item.newEntry</td>
                        <td>@item.name</td>
                        <td>@item.age</td>
                        <td>@item.location</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="../../Scripts/semantic.min.js"></script>
    <style type="text/css">
        .ui.borderless.huge.menu {
            background-color: #f8f8f8;
        }

            .ui.borderless.huge.menu .header.item {
                font-size: 1.2em;
            }

        .ui.vertical.menu {
            display: none;
            background-color: #f8f8f8;
        }

            .ui.vertical.menu .item .title .dropdown.icon {
                float: none;
            }

            .ui.vertical.menu .item .content .item {
                padding: 0.5em 1em;
            }

            .ui.vertical.menu .header.item {
                text-transform: uppercase;
            }

        .ui.message {
            background-color: rga(238, 238, 238);
            box-shadow: none;
            padding: 5em 4em;
        }

            .ui.message h1.ui.header {
                font-size: 4.5em;
            }

            .ui.message p.lead {
                font-size: 1.3em;
                color: #333333;
                line-height: 1.4;
                font-weight: 300;
            }
    </style>
    <script>
        $(document).ready(function () {
            $('.ui.dropdown').dropdown();
            $('.ui.accordion').accordion();

            // bind "hide and show vertical menu" event to top right icon button
            $('.ui.toggle.button').click(function () {
                $('.ui.vertical.menu').toggle("250", "linear")
            });
        });

        $(document).ready(function () {
            $('#queueTable').DataTable();
        });
    </script>
</body>
</html>

